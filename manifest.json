{
  "manifest_version": 2,

  "name": "Gifshot Extension",
  "description": "a chrome extension I created to make use of the gifshot library",
  "version": "1.3",
  "icons": { "16": "icon_16.png", "128": "icon_128.png" },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "storage",
    "videoCapture",
    "audioCapture",
    "http://*/",
    "https://*/"
  ]
}
